{
	"name": "shelly-back",
	"version": "1.0.0",
	"description": "Backend API for Shelly - managing pet shelter operations including adoptions, shelters, pets, and volunteers",
	"author": "shelly-app",
	"repository": "shelly-app/back",
	"license": "MIT",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"build": "tsc && tsup",
		"start:dev": "node --import=tsx --watch src/index.ts",
		"start:prod": "node dist/index.js",
		"check": "biome check --write",
		"test": "vitest run",
		"test:cov": "vitest run --coverage",
		"db:up": "docker compose up -d --wait",
		"db:down": "docker compose down",
		"db:migrate": "tsx src/database/migrator.ts up",
		"db:migrate:down": "tsx src/database/migrator.ts down",
		"db:seed": "tsx src/database/seed.ts",
		"db:setup": "pnpm db:up && pnpm db:migrate",
		"db:reset": "pnpm db:migrate:down && pnpm db:migrate && pnpm db:seed",
		"dev": "pnpm db:setup && pnpm start:dev",
		"export:openapi": "tsx src/scripts/export-openapi-spec.ts"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.4",
		"@aws-sdk/client-s3": "^3.947.0",
		"@aws-sdk/client-ses": "^3.946.0",
		"@aws-sdk/s3-request-presigner": "^3.947.0",
		"aws-jwt-verify": "^5.1.1",
		"cors": "2.8.5",
		"dotenv": "17.2.1",
		"express": "5.1.0",
		"express-rate-limit": "8.0.1",
		"helmet": "8.1.0",
		"http-status-codes": "2.3.0",
		"kysely": "^0.28.8",
		"multer": "^2.0.2",
		"pg": "^8.16.3",
		"pino": "9.9.0",
		"pino-http": "10.5.0",
		"swagger-ui-express": "5.0.1",
		"zod": "3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/cors": "2.8.19",
		"@types/express": "5.0.3",
		"@types/multer": "^2.0.0",
		"@types/pg": "^8.15.6",
		"@types/supertest": "6.0.3",
		"@types/swagger-ui-express": "4.1.8",
		"@vitest/coverage-v8": "3.2.4",
		"kysely-codegen": "^0.19.0",
		"pino-pretty": "13.1.1",
		"supertest": "7.1.4",
		"tsup": "8.5.0",
		"tsx": "4.20.4",
		"typescript": "5.9.2",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"outDir": "dist",
		"format": [
			"esm",
			"cjs"
		],
		"target": "es2020",
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"splitting": false,
		"skipNodeModulesBundle": true
	},
	"packageManager": "pnpm@10.14.0"
}
